{{#if @user.archived}}
  <div class="message is-warning" data-testid="archived-message">
    <div class="message-body p-1">
      This user is archived
    </div>
  </div>
{{/if}}

<button
  class="button is-primary"
  type="button"
  data-testid="archive-button"
  {{on "click" this.toggleArchived}}
>
  {{if @user.archived "Unarchive" "Archive"}}
  user
</button>